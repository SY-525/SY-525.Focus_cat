{
  "manifest_version": 3,
  "name": "Focus Cat: Stop Entertainment Distractions",
  "version": "1.0.1",
  "description": "A cute but angry cat blocks your screen when you open distracting sites!",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.tiktok.com/*",
    "*://*.instagram.com/*",
    "*://*.netflix.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "cat.png",
    "48": "cat.png",
    "128": "cat.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["cat.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
